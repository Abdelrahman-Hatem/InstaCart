/data
    ├── order_table.csv
    ├── products_table.csv
    ├── order_products_train_table.csv
    ├── order_products_prior_table.csv
    ├── departments_table.csv
    └── aisles_table.csv

#!/bin/bash

# Create a directory for the data
mkdir data

# Order Table
echo "order_id,user_id,eval_set,order_number,order_dow,order_hour_of_day,days_since_prior_order" > data/order_table.csv
# Add your data here
# Example:
# echo "1,1,prior,1,2,08,NA" >> data/order_table.csv
# echo "2,1,prior,2,3,07,15" >> data/order_table.csv
# echo "3,1,prior,3,3,12,21" >> data/order_table.csv
# ...

# Products Table
echo "product_id,product_name,aisle_id,department_id" > data/products_table.csv
# Add your data here
# Example:
# echo "1,Product1,1,1" >> data/products_table.csv
# echo "2,Product2,2,1" >> data/products_table.csv
# echo "3,Product3,3,2" >> data/products_table.csv
# ...

# Order Products Train Table
echo "order_id,product_id,add_to_cart_order,reordered" > data/order_products_train_table.csv
# Add your data here
# Example:
# echo "1,1,1,1" >> data/order_products_train_table.csv
# echo "2,2,1,0" >> data/order_products_train_table.csv
# echo "3,3,1,1" >> data/order_products_train_table.csv
# ...

# Order Products Prior Table
echo "order_id,product_id,add_to_cart_order,reordered" > data/order_products_prior_table.csv
# Add your data here
# Example:
# echo "1,1,1,1" >> data/order_products_prior_table.csv
# echo "2,2,1,0" >> data/order_products_prior_table.csv
# echo "3,3,1,1" >> data/order_products_prior_table.csv
# ...

# Departments Table
echo "department_id,department" > data/departments_table.csv
# Add your data here
# Example:
# echo "1,Department1" >> data/departments_table.csv
# echo "2,Department2" >> data/departments_table.csv
# echo "3,Department3" >> data/departments_table.csv
# ...

# Aisles Table
echo "aisle_id,aisle" > data/aisles_table.csv
# Add your data here
# Example:
# echo "1,Aisle1" >> data/aisles_table.csv
# echo "2,Aisle2" >> data/aisles_table.csv
# echo "3,Aisle3" >> data/aisles_table.csv
# ...

echo "Data conversion completed."
